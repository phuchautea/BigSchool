@model IEnumerable<BigSchool.Models.Course>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Following</h2>

<p>
    @Html.ActionLink("Create New", "Create", "Course")
</p>
<div class="row">
    <ul class="course">
        @foreach (var course in Model)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @course.DateTime.ToString("MM")
                    </div>
                    <div class="day">
                        @course.DateTime.ToString("dd")
                    </div>
                </div>
                <div class="details">
                    <span class="lecture">
                        @course.Name
                    </span>
                    <span class="category">
                        @course.Category.Name
                    </span>
                    @if (course.isCanceled)
                    {
                        <span class="badge bg-danger">Canceled</span>
                    }
                </div>
                @*<b>Thời gian:</b> @course.DateTime.ToString("dd/MM/yyyy HH:mm:ss") - <b>User:</b> @course.Name - <b>Địa điểm:</b> @course.Place*@
            </li>
        }
    </ul>
</div>
@section scripts
{
    <script>
        $(document).ready(function () {
            $(".js-tongle-attendance").click(function (e) {
                var button = $(e.target);
                $.post("/api/attendances", { Id: button.attr("data-course-id") })
                    .done(function () {
                        alert("Đăng ký khóa học thành công!");
                        button.removeClass("btn-default");
                        button.addClass("btn-info");
                        button.text("Going");
                    }).fail(function () {
                        alert("Khóa học đã đăng ký rồi, chọn khóa khác");
                    });
            });
        });
    </script>
}
